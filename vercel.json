{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/media/(.*)\\.(webp|png|jpg|jpeg|gif|svg)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/content/(.*)\\.json",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=60, must-revalidate" },
        { "key": "Content-Type", "value": "application/json; charset=utf-8" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/research", "destination": "/research.html" }
  ]
}
